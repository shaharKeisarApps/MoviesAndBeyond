<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MoviesAndBeyond" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Enable true edge-to-edge display -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Make navigation bar contrast enforced on Android 10+ -->
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

    <!-- Android 12+ Splash Screen Theme (Light Mode) -->
    <style name="Theme.MoviesAndBeyond.Splash" parent="Theme.SplashScreen">
        <!-- Splash screen background color - matches launcher icon background -->
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <!-- Splash screen icon - uses adaptive icon foreground -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <!-- Theme to apply after splash screen exits -->
        <item name="postSplashScreenTheme">@style/Theme.MoviesAndBeyond</item>
    </style>
</resources>